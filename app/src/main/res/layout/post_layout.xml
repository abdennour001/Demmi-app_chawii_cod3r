                            </LinearLayout>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:text="شهرة محمد ع.المالك"
                                android:textSize="18dp"
                                android:layout_marginLeft="5dp"
                                android:textStyle="bold"
                                android:textColor="@color/colorGrey"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="top|right">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_gravity="right"
                                android:text="• قبل 2 ساعة"
                                android:textColor="@color/colorGrey"
                                android:textSize="14dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:text="ولاية الشلف - الآغا"
                                android:textSize="14dp"
                                android:textColor="@color/colorGrey"/>

                        </LinearLayout>

                    </LinearLayout>


                    <TextView
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:layout_margin="3dp"
                        android:background="@drawable/badge_background"
                        android:gravity="center"
                        android:padding="3dp"
                        android:textColor="@color/colorWhiteBackGround"
                        android:text="ش ع"
                        android:textSize="16sp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>


                </LinearLayout>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingBottom="5dp"
                android:text="السلام عليكم و رحمة الله تعالى و بركاته لقد تم تحديد موعد حملة تبرع بالدم في مدينة الشلف و ذلك لفائدة عدة مستشفيات و عيادات في المنطقة و على هذا الأساس نحن نرجوا منكم أن تكونوا في الموعد و أن تساعدونا على إنقاذ الكثير من الأرواح فقطرة من دمكم قد تساوي حياة إنسان."
                android:textColor="@color/colorGrey"
                android:textSize="14dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/tags_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                app:flexDirection="row_reverse"
                app:alignContent="flex_start"
                app:alignItems="flex_start"
                app:flexWrap="wrap"
                >

                <!-- Post Tags -->


                <TextView
                    android:id="@+id/tag5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonstylepost"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="الشلف"
                    android:textColor="@color/colorWhiteBackGround"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>


                <TextView
                    android:id="@+id/tag6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonstylepost"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="حملة تبرع بالدم"
                    android:textColor="@color/colorWhiteBackGround"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>


                <TextView
                    android:id="@+id/tag7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonstylepost"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="طلب عام للتبرع بالدم"
                    android:textColor="@color/colorWhiteBackGround"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

                <TextView
                    android:id="@+id/tag8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonstylepost"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="مهم جدا"
                    android:textColor="@color/colorWhiteBackGround"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

                <TextView
                    android:id="@+id/tag1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonstylepost"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="O"
                    android:textColor="@color/colorWhiteBackGround"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>


                <TextView
                    android:id="@+id/tag2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonstylepost"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="AB"
                    android:textColor="@color/colorWhiteBackGround"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>


                <TextView
                    android:id="@+id/tag3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonstylepost"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="B"
                    android:textColor="@color/colorWhiteBackGround"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>


                <TextView
                    android:id="@+id/tag4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonstylepost"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="A"
                    android:textColor="@color/colorWhiteBackGround"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>


                <!-- Post Tags -->

            </com.google.android.flexbox.FlexboxLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:gravity="top">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_reply_green_24dp"
                    android:drawablePadding="10dp"
                    android:text="مشاركة"
                    android:textColor="@color/colorAccent"
